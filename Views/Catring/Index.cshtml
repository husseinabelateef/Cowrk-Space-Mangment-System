@model List< ProductsDetailsCartViewModel>
<div   class="container mt-5 mb-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <div class="p-2">
                    <h4>Shopping cart</h4>
                </div>

                 <div id="product-Cart-Container" data-CartId = "@ViewData["CartId"]">

              @{if(Model!= null)
              @foreach(var item in Model){  
                <div id="@item.BarCode"class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
                    <div class="mr-1">
                        <img class="rounded" src="./image/317.jpg" width="70">
                    </div>
                    <div class="d-flex flex-column align-items-center product-details">
                            <span class="font-weight-bold">@item.Name</span>
                    </div>

                    <div class="d-flex flex-row align-items-center qty">
                       <span  >  <i onclick = "decreaseProductQty('@item.BarCode')" class="fa fa-minus text-danger ms-2 me-2 p-2" ></i> </span>
                        <h5  class="text-grey">  @item.Quantity </h5>
                     <span>  <i onclick="increseProductQty('@item.BarCode')" class="fa fa-plus text-success ms-2 me-2 p-2"></i> </span>
                    </div>
                    <div>
                        <h5 class="text-grey">$@item.price </h5>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-trash mb-1 text-danger" onclick="DeleteProd('@item.BarCode')"></i>
                    </div>
                </div>
                }
                
            }
                </div>
                <div class="d-flex flex-row align-items-center justify-content-between mt-3 p-2 bg-white rounded">
                    <h5 class="text-grey"> Total Price</h5>
                    <h5 id="totalCartPrice"class="text-grey">@ViewData["TotalPrice"]</h5>
                </div>
                <div class="d-flex flex-row align-items-center justify-content-center mt-3 p-2 bg-white rounded">
                    <button class="btn btn-warning btn-block btn-lg ml-2 pay-button" type="button">Proceed to Pay
                    </button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{

      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>

    <script>
    var VariableCartId = document.getElementById("product-Cart-Container");
    var VariableCartIdContent  = VariableCartId.getAttribute('data-CartId');
    function update(qty, BarCode) {
  var proCont = document.getElementById(BarCode);
  var quantity = proCont.children[2];
  var QuntityValue = quantity.children[1];
  var totPriceCart = documentGetElementById("totalCartPrice")
  if (QuntityValue.textContent !== 1) {
    QuntityValue.textContent = qty;
    totPriceCart.textContent = ViewData["TotalPrice"]
  } else {
    if (confirm("Are you sure you want to Delete")) {
      Delete(BarCode);
    } else {
      console.log("Thing was not saved to the database.");
    }
  }
}
function Delete(BarCode)
{
  var proCont = document.getElementById(BarCode);
  proCont.remove();
}
function DeleteProd(BarCode) {
  if (confirm("Are you sure you want to Delete")) 
  {
    Delete(BarCode)
  }
  else 
  {
    // Do nothing!
    console.log("Thing was not saved to the database.");
  }
  console.log("Fatma");
}
function decreaseProductQty(BarCode) {
  var proCont = document.getElementById(BarCode);
  var quantity = proCont.children[2];
  var QuntityValue = quantity.children[1];
  if (QuntityValue.textContent !== 1) {
   decreaseAjaxCall(BarCode) 
  } else {
    if (confirm("Are you sure you want to Delete")) {
      Delete(BarCode);
    } else {
      console.log("Thing was not saved to the database.");
    }
  }

  console.log("Decrease");
}
function deleteAjaxCall(BarCode) {
  $.ajax({
    url: "/Catring/delete",
    //type: "POST",
    data: { BarCode: BarCode, CartId: VariableCartIdContent },
    contentType: "application/json; charset=utf-8",
    processData: false,
    success: function (data) {
      console.log(data);
      alert(data)
    },
    error: function () {
      alert("Error occured!!");
    },
  });
}
function decreaseAjaxCall(BarCode) {
  $.ajax({
    url: "/Catring/decrease",
    //type: "POST",
    data: { BarCode: BarCode, CartId: VariableCartIdContent },
    contentType: "application/json; charset=utf-8",
    processData: false,
    success: function (data) {
      console.log(data);
      update(data.quantity, data.barCode);
    },
    error: function () {
      alert("Error occured!!");
    },
  });
}

function increseProductQty(BarCode) {
  $.ajax({
    url: "/Catring/Increase",
    data: { BarCode: BarCode, CartId: VariableCartIdContent },
    success: function (data) {
      console.log(data.name);
      if(View.Data["status"]){
      update(data.quantity, data.barCode)}
      else{
          alert("Product Out Of Stock");
      }
    },
    error: function () {
      alert("Error occured!!");
    },
  });
  console.log("Increase");
}

    </script>
    }

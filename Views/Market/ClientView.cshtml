
@{
    ViewData["Title"] = "ClientView";
    Layout = null;
}
<style>
    #MainDiv{

        height:30em;
        background-image:url(~/assets/img/Qrcode.jpg);
        background-size:50px 50px;
        background-repeat:repeat;
        position:relative;
    }

    #SecDiv{

        width:50%;
        height:25em;
        background-color:rgb(255, 222, 156);
        height:25em;
        display:flex;
        flex-direction:column;
        text-align: center;
         position:absolute;
         left:50%;
         top:50%;
         transform :translate(-50%,-50%);
    }
   
    input{
        
        margin:3em 12em;
        width: 25em;
        height: 4em;
        border-radius: 45px;
        border: none;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        margin-bottom:0;
        font-family: 'Roboto', sans-serif;
        font-weight: 500;
       
    }
    #BTN{
        
         background-color:rgb(87,87,87);
         color:white;
    }
     #BTN:hover{
          color: rgb(87,87,87);
          transform: translateY(-7px);
          background-color: rgb(215,215,215);
          box-shadow: 0px 15px 20px rgb(215,215,215);
  }

</style>


<div id="MainDiv">
    <div id="SecDiv">
        <h1 style="margin-top:1em">Please, Scan Your Qrcode to Login</h1>
        <input id="TxtBox" type="text"/>
        <input id="BTN" asp-action="ClientView" asp-controller="Market" type="button" value="ENTER"/>
    </div>
</div>

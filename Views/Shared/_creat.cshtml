<!-- Modal -->
<div style="color:white"  class="modal  fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="  background-color:black;opacity: 0.8;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Book Class</h5>
        <button style="color:white;background-color:#F9CB38" type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       		<form method="post" action="Index">
							<div class="row">
								
									<div class="form-group">
										<span class="form-label">Name</span>
										<input class="form-control" type="text" placeholder="Enter your name" value=@Model.Client_Name/>
									</div>
								
								<div class="col-sm-6">
							
								</div>
							</div>
							<div class="form-group">
								<span class="form-label">Phone</span>
								<input class="form-control" type="tel" placeholder="Enter your phone number" value=@Model.phone>
							</div>
                            <br />
				                 <div class="row">
								<div class="form-group col-sm-6">
										<span class="form-label">Pickup Date</span>
										<input class="form-control" type="date" required value=@Model.Date_Reserve>
									</div>
						
							<div class="form-group col-sm-6">
										<span class="form-label">Class</span>
										<select class="form-control" onselect=@Model.type_Room>
													<option>Nook 1</option>
													<option>Nook 2</option>
                                         </select>
									</div>
								 </div>
                                 	<br />
									<div class="row">
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">Hour</span>
												<select class="form-control" onselect=@Model.Start_Time>
													<option>1</option>
													<option>2</option>
													<option>3</option>
													<option>4</option>
													<option>5</option>
													<option>6</option>
													<option>7</option>
													<option>8</option>
													<option>9</option>
													<option>10</option>
													<option>11</option>
													<option>12</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">Expected Hours</span>
												<select class="form-control" onselect=@Model.ExpextedHours>
												    <option>1</option>
													<option>2</option>
													<option>3</option>
													<option>4</option>
													<option>5</option>
													<option>6</option>
													<option>7</option>
													<option>8</option>
													<option>9</option>
													<option>10</option>
													<option>11</option>
													<option>12</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">AM/PM</span>
												<select class="form-control">
													<option>AM</option>
													<option>PM</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
									</div>
								
						 <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" style="background-color: #F9CB38;border:1px solid black;"class="btn btn-primary">Save</button>
      </div>
						</form>
      </div>
     
    </div>
  </div>
</div>

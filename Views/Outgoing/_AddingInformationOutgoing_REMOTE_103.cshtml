@model Outgoing
<style>
     .discrpt{   
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color:#F9CB38;
    background-color: rgba(12, 1, 1, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

</style>

<button style="background-color: #F9CB38; width:100px;border:1px solid white;" id="btnclick" type="button" class="btn btn-primary ms-4" data-toggle="modal" data-target="#exampleModal">
  Add
</button>
<div class="discrpt " style="margin-top: 7%; " id="addInf"  >
<form  method="post"   asp-action="AddingInformation" asp-controller="Outgoing" >
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
          <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
          <span asp-validation-for="Date" class="text-danger"></span>
    </div>
   
    <div>
        <label asp-for="Reciption_ID"></label>
       <input asp-for="Reciption_ID" class="form-control" />
          <span asp-validation-for="Reciption_ID" class="text-danger"></span>
    </div>
    <input style="background-color: #F9CB38; width:100px;border:1px solid white;" type="submit" value="Save" class="btn btn-success" />
</form>
</div>
<script>
    $(document).ready(function(){
        $('btnclick').click(function(){
            $('#addInf').modal('toggle')
        })
    })
</script>
@model Client

<style>
    #MainDiv{

        height:30em;
        background-color:white;
        background-size:50px 50px;
        background-repeat:repeat;
        text-align:center;
        position:relative;
    }

    #SecDiv{

        width:75%;
        height:30em;
        background-color:rgb(255, 222, 156);
        height:25em;
        display:flex;
        flex-direction:column;
        text-align: center;
         position:absolute;
         left:50%;
         top:50%;
         transform :translate(-50%,-50%);
    }
   
    input{
        
        margin:3em 12em;
        width: 20em;
        height: 2em;
        border-radius: 45px;
        border: none;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        margin-bottom:0;
        font-family: 'Roboto', sans-serif;
        font-weight: 500;
       
    }
    #BTN{
        
         background-color:rgb(87,87,87);
         color:white;
    }
     #BTN:hover{
          color: rgb(87,87,87);
          transform: translateY(-7px);
          background-color: rgb(215,215,215);
          box-shadow: 0px 15px 20px rgb(215,215,215);
  }
</style>

<div id="MainDiv">
<h1> New Client</h1>
        <div id="SecDiv">
    <form action="/Client/SaveNewClient" method="post">

        <div class="content">
            <label for="Name">Name</label>
            <input class="TxtBox"  name="Name" id="Name" type="text" class = "form-control" value="@Model.Name" />
        </div>
         <div class="content">
            <label for="Profession">Profession</label>
            <input class="TxtBox" name="Profession" id="Profession" type = "text" style="margin-left:160px;" class = "form-control" value="@Model.Profession" >

        </div>
         <div class="content">
            <label for="phone">Phone</label>
            <input class="TxtBox" name="phone" id="phone" type="tel" class = "form-control" value="@Model.phone" />
        </div>
         <div class="content">
            <label for="Faculty">Faculty</label>
            <input class="TxtBox" name="Faculty" id="Faculty" type="text" class = "form-control" value="@Model.Faculty" />
        </div>
          <input type="submit" class="btn btn-success" value="Submit" style="background-color:rgb(68,68,68);margin:2em;width:15em" />
     
    </form>
    </div>
</div>
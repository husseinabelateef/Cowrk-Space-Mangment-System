
@model IEnumerable<Cowrk_Space_Mangment_System.Models.Client>

@{
    ViewData["Title"] = "GetAllClients";
}
<div style="text-align:center">

<h1>All Clients</h1>

<p>
    <a asp-action="NewClient">Create New Client</a>
</p>
</div>
<table class="table table-striped" >
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QR_Code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QR_Code)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditClient", new {  id=item.ID }) |
                @Html.ActionLink("Details", "Details", new {  id=item.ID }) |
                @Html.ActionLink("Delete", "DeleteClient", new {  id=item.ID  })
            </td>
        </tr>
}
    </tbody>
</table>


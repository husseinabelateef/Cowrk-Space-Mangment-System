@model IEnumerable<Cowrk_Space_Mangment_System.Models.Reservation>

@{
    ViewData["Title"] = "GetAllReservations";
}
<div style="text-align:center">

<h1>All Reservations</h1>
<p>
    <a asp-action="NewReservation" asp-controller="Reservation">Create New Reservation</a>
</p>
</div>
<table class="table table-striped" >
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpextedHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppuserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
    
        <tr class="table-active">
            <th>
                @Html.DisplayFor(modelItem => item.ID)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpextedHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppuserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cart_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
}
    </tbody>
</table>
@model IEnumerable<Cowrk_Space_Mangment_System.Models.Receptionist>

@{
    ViewData["Title"] = "GetAllReceptionists";
}

<h1>GetAllReceptionists</h1>

<p>
    <a asp-action="Create">Add New Reciptionist</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicationuser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicationuser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicationuser.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicationuser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicationuser.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryPerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicationuser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicationuser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicationuser.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicationuser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicationuser.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryPerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHours)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=@item.AppId}) |
                @Html.ActionLink("Details", "Details", new { id=@item.AppId }) |
                @Html.ActionLink("Delete", "Delete", new { id=@item.AppId})
            </td>
        </tr>
}
    </tbody>
</table>
